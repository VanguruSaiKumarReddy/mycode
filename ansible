- name: "CIS 3.3.1.e | Ensure net.ipv6.conf.default.accept_source_route=0 in /etc/sysctl.conf"
  ansible.posix.sysctl:
    name: net.ipv6.conf.default.accept_source_route
    value: "0"
    state: present
    sysctl_file: /etc/sysctl.conf
    reload: yes
  tags: ['cis_3_3_1_e','cis','network','ipv6']


# Running value
sysctl -n net.ipv6.conf.default.accept_source_route

# Persisted config
grep -E '^\s*net\.ipv6\.conf\.default\.accept_source_route\s*=\s*0\s*$' /etc/sysctl.conf
