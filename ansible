- name: "CIS 3.3.4.c | Ensure net.ipv4.conf.default.log_martians=1 in /etc/sysctl.conf"
  ansible.posix.sysctl:
    name: net.ipv4.conf.default.log_martians
    value: "1"
    state: present
    sysctl_file: /etc/sysctl.conf
    reload: yes
  tags: ['cis_3_3_4_c','cis','network','ipv4']


# Runtime check
sysctl -n net.ipv4.conf.default.log_martians

# Persisted config check
grep -E '^\s*net\.ipv4\.conf\.default\.log_martians\s*=\s*1\s*$' /etc/sysctl.conf
