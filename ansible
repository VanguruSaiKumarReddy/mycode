- name: "CIS 3.3.9.c | Ensure net.ipv6.conf.default.accept_ra=0 in /etc/sysctl.conf"
  ansible.posix.sysctl:
    name: net.ipv6.conf.default.accept_ra
    value: "0"
    state: present
    sysctl_file: /etc/sysctl.conf
    reload: yes
  tags: ['cis_3_3_9_c','cis','network','ipv6']



# Runtime
sysctl -n net.ipv6.conf.default.accept_ra

# Persisted config
grep -E '^\s*net\.ipv6\.conf\.default\.accept_ra\s*=\s*0\s*$' /etc/sysctl.conf
