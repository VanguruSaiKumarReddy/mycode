- name: "CIS 3.3.7.c | Ensure net.ipv4.conf.all.rp_filter=1 in /etc/sysctl.conf"
  ansible.posix.sysctl:
    name: net.ipv4.conf.all.rp_filter
    value: "1"
    state: present
    sysctl_file: /etc/sysctl.conf
    reload: yes
  tags: ['cis_3_3_7_c','cis','network','ipv4']


# Runtime value must be 1
sysctl -n net.ipv4.conf.all.rp_filter

# Persisted value in the file this control inspects
grep -E '^\s*net\.ipv4\.conf\.all\.rp_filter\s*=\s*1\s*$' /etc/sysctl.conf
