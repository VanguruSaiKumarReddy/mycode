- name: "CIS 3.4.1.2.c | Unmask firewalld service"
  command: systemctl unmask firewalld
  args:
    warn: false
  changed_when: false
  tags: ['cis_3_4_1_2_c','cis','firewall']

- name: "CIS 3.4.1.2.c | Enable and start firewalld"
  service:
    name: firewalld
    state: started
    enabled: true
  tags: ['cis_3_4_1_2_c','cis','firewall']


systemctl is-enabled firewalld
systemctl is-active firewalld
