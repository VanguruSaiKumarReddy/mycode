- name: "CIS 4.2.2.4 | Ensure journald storage is persistent"
  lineinfile:
    path: /etc/systemd/journald.conf
    regexp: '^\s*Storage='
    line: 'Storage=persistent'
    create: yes
    mode: '0644'
  notify: restart_systemd_journald
  tags: ['cis_4_2_2_4','cis','journald']



# Check config file
grep -E '^\s*Storage=persistent' /etc/systemd/journald.conf

# Confirm journald is persisting logs
systemctl show systemd-journald | grep Storage
