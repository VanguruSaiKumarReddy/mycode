- name: "4.2.1.4.a | Ensure $FileCreateMode is set to 0640 in /etc/rsyslog.conf"
  replace:
    path: /etc/rsyslog.conf
    regexp: '^(?:\$FileCreateMode|FileCreateMode).*'
    replace: '$FileCreateMode 0640'
  backup: yes
  tags: ['cis_4_2_1_4_a','cis','rsyslog']


grep -E '^\s*\$FileCreateMode' /etc/rsyslog.conf
