- name: "3.3.7.a | Ensure rp_filter=1 in 50-default.conf"
  replace:
    path: /usr/lib/sysctl.d/50-default.conf
    regexp: '^(\\s*net\\.ipv4\\.conf\\.(all|default)\\.rp_filter\\s*=\\s*)\\d+'
    replace: '\11'
  backup: yes
  tags: ['cis_3_3_7_a','sysctl']



grep -E 'net\.ipv4\.conf\.(all|default)\.rp_filter' /usr/lib/sysctl.d/50-default.conf
sysctl -n net.ipv4.conf.default.rp_filter
sysctl -n net.ipv4.conf.all.rp_filter
