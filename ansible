- name: "5.4.2.b | Ensure pam_faillock is configured in system-auth"
  lineinfile:
    path: /etc/pam.d/system-auth
    regexp: '^\s*auth\s+required\s+pam_faillock\.so\b'
    line: "auth        required      pam_faillock.so deny=5 unlock_time=900"
    create: yes
    mode: '0644'
    backup: yes
  tags: ['cis_5_4_2_b','pam','faillock']



grep -E '^\s*auth\s+required\s+pam_faillock\.so' /etc/pam.d/system-auth
