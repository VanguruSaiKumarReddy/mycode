- name: "CIS 3.3.5.c | Ensure net.ipv4.icmp_echo_ignore_broadcasts=1 in /etc/sysctl.conf"
  ansible.posix.sysctl:
    name: net.ipv4.icmp_echo_ignore_broadcasts
    value: "1"
    state: present
    sysctl_file: /etc/sysctl.conf
    reload: yes
  tags: ['cis_3_3_5_c','cis','network','ipv4']


# Runtime check
sysctl -n net.ipv4.icmp_echo_ignore_broadcasts

# Persisted config check
grep -E '^\s*net\.ipv4\.icmp_echo_ignore_broadcasts\s*=\s*1\s*$' /etc/sysctl.conf
