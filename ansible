- name: "CIS 3.2.2.f | Ensure net.ipv4.conf.all.send_redirects=0 in /etc/sysctl.conf"
  ansible.posix.sysctl:
    name: net.ipv4.conf.all.send_redirects
    value: "0"
    state: present
    sysctl_file: /etc/sysctl.conf
    reload: yes
  tags: ['cis_3_2_2_f','cis','network']


# Running value
sysctl -n net.ipv4.conf.all.send_redirects

# Persisted config value
grep -E '^\s*net\.ipv4\.conf\.all\.send_redirects\s*=\s*0\s*$' /etc/sysctl.conf
