- name: "CIS 3.2.2.e | Ensure net.ipv4.conf.default.send_redirects=0 in /etc/sysctl.conf"
  ansible.posix.sysctl:
    name: net.ipv4.conf.default.send_redirects
    value: "0"
    state: present
    sysctl_file: /etc/sysctl.conf
    reload: yes
  tags: ['cis_3_2_2_e','cis','network']



# Check the current running value
sysctl -n net.ipv4.conf.default.send_redirects

# Check whatâ€™s persisted in /etc/sysctl.conf
grep -E '^\s*net\.ipv4\.conf\.default\.send_redirects\s*=\s*0\s*$' /etc/sysctl.conf
