- name: "CIS 3.3.2.e | Ensure net.ipv6.conf.default.accept_redirects=0 in /etc/sysctl.conf"
  ansible.posix.sysctl:
    name: net.ipv6.conf.default.accept_redirects
    value: "0"
    state: present
    sysctl_file: /etc/sysctl.conf
    reload: yes
  tags: ['cis_3_3_2_e','cis','network','ipv6']


# Runtime check
sysctl -n net.ipv6.conf.default.accept_redirects

# Persisted config check
grep -E '^\s*net\.ipv6\.conf\.default\.accept_redirects\s*=\s*0\s*$' /etc/sysctl.conf
