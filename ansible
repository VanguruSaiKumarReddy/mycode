- name: "5.5.1.e | Ensure pwquality ocredit is set to -1"
  lineinfile:
    path: /etc/security/pwquality.conf
    regexp: '^\s*ocredit\s*='
    line: 'ocredit = -1'
    create: yes
    mode: '0644'
    backup: yes
  tags: ['cis_5_5_1_e','cis','pwquality','password']


grep -E '^\s*ocredit\s*=' /etc/security/pwquality.conf
