- name: "CIS 3.3.3.e | Ensure net.ipv4.conf.default.secure_redirects=0 in /etc/sysctl.conf"
  ansible.posix.sysctl:
    name: net.ipv4.conf.default.secure_redirects
    value: "0"
    state: present
    sysctl_file: /etc/sysctl.conf
    reload: yes
  tags: ['cis_3_3_3_e','cis','network','ipv4']


# Runtime check
sysctl -n net.ipv4.conf.default.secure_redirects

# Persisted config check
grep -E '^\s*net\.ipv4\.conf\.default\.secure_redirects\s*=\s*0\s*$' /etc/sysctl.conf
