- name: "5.5.1.c | Ensure pwquality minlen is set to 14 or more"
  lineinfile:
    path: /etc/security/pwquality.conf
    regexp: '^\s*minlen\s*='
    line: 'minlen = 14'
    create: yes
    mode: '0644'
    backup: yes
  tags: ['cis_5_5_1_c','cis','pwquality','password']


grep -E '^\s*minlen\s*=' /etc/security/pwquality.conf
